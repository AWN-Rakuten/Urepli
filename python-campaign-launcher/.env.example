# AI Social Campaign Launcher Configuration
# Copy this file to .env and fill in your API keys and settings

# Database Configuration
CAMPAIGN_DATABASE_URL=postgresql://postgres:password@localhost:5432/campaign_launcher

# Redis Configuration (for Celery)
CAMPAIGN_REDIS_URL=redis://localhost:6379/0

# AI Service API Keys
CAMPAIGN_GEMINI_API_KEY=your_gemini_api_key_here
CAMPAIGN_OPENAI_API_KEY=your_openai_api_key_here

# Social Media API Keys
# TikTok
CAMPAIGN_TIKTOK_CLIENT_ID=your_tiktok_client_id
CAMPAIGN_TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Instagram
CAMPAIGN_INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# YouTube
CAMPAIGN_YOUTUBE_CLIENT_ID=your_youtube_client_id
CAMPAIGN_YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# S3-Compatible Storage (MinIO or AWS S3)
CAMPAIGN_S3_BUCKET=campaign-assets
CAMPAIGN_S3_ACCESS_KEY=your_s3_access_key
CAMPAIGN_S3_SECRET_KEY=your_s3_secret_key
CAMPAIGN_S3_ENDPOINT=http://localhost:9000  # For MinIO
CAMPAIGN_S3_REGION=us-east-1

# Application Settings
CAMPAIGN_APP_SECRET_KEY=your_secret_key_here_make_it_random_and_long
CAMPAIGN_DEBUG=false

# Japanese Optimization
CAMPAIGN_JAPANESE_LOCALE=true
CAMPAIGN_TIMEZONE=Asia/Tokyo

# Rate Limiting
CAMPAIGN_API_RATE_LIMIT=100

# Video Generation Settings
CAMPAIGN_VIDEO_OUTPUT_PATH=/tmp/videos
CAMPAIGN_MAX_VIDEO_DURATION=60
CAMPAIGN_DEFAULT_VIDEO_STYLE=anime

# Default Japanese Hashtags (comma-separated)
CAMPAIGN_DEFAULT_HASHTAGS_JP=#AI,#バイラル,#トレンド,#日本,#面白い,#新商品,#レビュー,#ショート動画,#話題

# Logging
LOG_LEVEL=INFO
    {
      "parameters": {
        "jsCode": "// Analyze compliance issues and determine if auto-fixable\nconst checks = $input.all()[0].json.checks;\nconst blockingIssues = checks.filter(c => c.isBlocking);\nconst fixableIssues = checks.filter(c => \n  c.type === 'disclosure' && \n  (c.id.includes('affiliate') || c.id.includes('amazon'))\n);\n\nconst canAutoFix = blockingIssues.length === fixableIssues.length;\n\nreturn {\n  canAutoFix,\n  blockingIssues,\n  fixableIssues,\n  totalIssues: checks.length,\n  contentId: $input.all()[0].json.contentId\n};"
      },
      "name": "Analyze Issues",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1320, 360]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "leftValue": "",
            "caseSensitive": true,
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "can-auto-fix",
              "leftValue": "={{$json.canAutoFix}}",
              "rightValue": true,
              "operator": {
                "type": "boolean",
                "operation": "equal"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },

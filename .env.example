# Urepli Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://urepli_user:your_password@localhost:5432/urepli"
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# =============================================================================
# Authentication & Security
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_32_character_jwt_secret_here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# AI Services Configuration
# =============================================================================
# Google Gemini API (Primary AI service)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (Fallback AI service)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# N8N Integration (Latest Version 1.19.4+)
# =============================================================================
N8N_WEBHOOK_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key
N8N_ENCRYPTION_KEY=your_n8n_encryption_key_32_chars

# =============================================================================
# Social Media Platform APIs
# =============================================================================

# TikTok Business API
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Instagram Graph API
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Facebook API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_PAGE_ID=your_facebook_page_id

# YouTube Data API
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# =============================================================================
# Japanese Affiliate Networks
# =============================================================================

# A8.net Affiliate Network
A8NET_API_KEY=your_a8net_api_key
A8NET_SECRET_KEY=your_a8net_secret_key
A8NET_AFFILIATE_ID=your_a8net_affiliate_id

# Rakuten Affiliate Program
RAKUTEN_APPLICATION_ID=your_rakuten_application_id
RAKUTEN_AFFILIATE_ID=your_rakuten_affiliate_id

# Amazon Associates Japan
AMAZON_ASSOCIATES_API_KEY=your_amazon_api_key
AMAZON_ASSOCIATES_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATES_TAG=your_amazon_associate_tag

# =============================================================================
# Video Processing Services
# =============================================================================

# ComfyUI for video generation
COMFYUI_URL=http://localhost:8188
COMFYUI_API_KEY=your_comfyui_api_key

# FFmpeg configuration
FFMPEG_PATH=/usr/bin/ffmpeg

# =============================================================================
# Browser Automation Configuration
# =============================================================================

# Puppeteer settings
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
PUPPETEER_HEADLESS=true

# Playwright settings
PLAYWRIGHT_HEADLESS=true

# Proxy configuration for automation
PROXY_LIST=proxy1:port,proxy2:port,proxy3:port
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# User agent rotation
USER_AGENT_ROTATION=true

# =============================================================================
# Cloud Storage Configuration
# =============================================================================

# Storage type: local, s3, gcs, azure
STORAGE_TYPE=local

# Local storage (development)
STORAGE_PATH=./uploads

# AWS S3 Configuration
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# CloudFront CDN
CDN_URL=https://your-cloudfront-distribution.cloudfront.net

# =============================================================================
# Email Configuration
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@urepli.com

# =============================================================================
# Monitoring & Analytics
# =============================================================================

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id

# New Relic (optional)
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# =============================================================================
# Security & Compliance
# =============================================================================

# CORS configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# Session configuration
SESSION_SECRET=your_session_secret_32_chars
SESSION_MAX_AGE=86400000  # 24 hours

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# =============================================================================
# Performance Configuration
# =============================================================================

# Node.js memory settings
NODE_OPTIONS="--max-old-space-size=4096"

# Database connection pool
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# Cache settings
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# =============================================================================
# Development Tools
# =============================================================================

# Enable development features
DEV_MODE=true
DEBUG_MODE=false

# Hot reloading
HOT_RELOAD=true

# API documentation
SWAGGER_ENABLED=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features for testing
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_MULTI_PLATFORM_POSTING=true
FEATURE_AFFILIATE_INTEGRATION=true
FEATURE_BROWSER_AUTOMATION=true
FEATURE_ADVANCED_ANALYTICS=true

# =============================================================================
# Localization
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ja
TIMEZONE=Asia/Tokyo

# =============================================================================
# Japanese Market Specific
# =============================================================================

# Japanese character encoding
CHARSET=utf8mb4

# Japanese timezone
TZ=Asia/Tokyo

# Japanese market features
JAPANESE_MARKET_OPTIMIZATION=true
JAPANESE_CONTENT_ANALYSIS=true

# =============================================================================
# Notes & Instructions
# =============================================================================

# 1. Copy this file to .env in the root directory
# 2. Update all placeholder values with your actual credentials
# 3. Never commit .env files to version control
# 4. Use different .env files for different environments
# 5. Generate secure random values for secrets and keys
# 6. Keep your API keys secure and rotate them regularly

# Quick setup commands:
# - Generate JWT secret: openssl rand -hex 32
# - Generate encryption key: openssl rand -hex 32
# - Setup database: npm run db:push
# - Install n8n latest: npm run install:n8n
# - Start development: npm run dev

# For production deployment:
# - Use environment-specific configuration
# - Enable SSL/TLS encryption
# - Configure proper logging and monitoring
# - Set up backup and recovery procedures
# - Implement proper security measures

# Smartphone Automation Configuration
APPIUM_HOST=localhost
APPIUM_PORT=4723
STF_HOST=localhost
STF_PORT=7100

# Device Management
MAX_DEVICES=10
DEVICE_HEALTH_CHECK_INTERVAL=60000
SESSION_TIMEOUT=3600000

# Mobile Proxy Configuration (optional)
MOBILE_PROXY_ENABLED=false
MOBILE_PROXY_PROVIDER=brightdata
MOBILE_PROXY_USERNAME=your_username
MOBILE_PROXY_PASSWORD=your_password

# Platform Enhancement Keys
TIKTOK_AUTOMATION_ENABLED=true
INSTAGRAM_AUTOMATION_ENABLED=true
YOUTUBE_AUTOMATION_ENABLED=true
